<div class="mt-4">
    <h3>Đăng Khóa Học</h3>
    <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="course-input">Tên khóa học</label>
            <input type="text" name="name" class="form-control" id="course-input">
        </div>
        <div class="form-group">
            <label for="course-input">Mô tả</label>
            <input type="text" name="description" class="form-control" id="course-input">
        </div>
        <div class="form-group">
            <label for="course-input">Video Id</label>
            <input type="text" name="videoId" class="form-control" id="course-input">
        </div>
        <div class="form-group">
            <label for="course-input">Trình độ</label>
            <input type="text" name="level" class="form-control" id="course-input">
        </div>
        <button type="submit" class="btn btn-primary">Đăng khóa học</button>
    </form>
</div>